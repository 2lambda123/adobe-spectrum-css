import { html } from "lit-html";
import { classMap } from "lit-html/directives/class-map.js";
import { ifDefined } from "lit-html/directives/if-defined.js";

// More on component templates: https://storybook.js.org/docs/web-components/writing-stories/introduction#using-args
export const Template = ({
  rootClass = "spectrum-{{ pascalCase name }}",
  customClasses = [],{{#if sizing}}
  size = "m",{{/if}}{{#each states}}
  is{{pascalCase this}} = false,{{/each}}{{#if variants}}
  variant,{{/if}}
  ...globals
}) => {
  const { express } = globals;

  try {
    // Load styles for this component
    import(/* webpackPrefetch: true */ "../index.css");

    if (!express) import(/* webpackPrefetch: true */ "../themes/spectrum.css");
    else import(/* webpackPrefetch: true */ "../themes/express.css");
  } catch (e) {
    console.warn(e);
  }

  const classList = {
    [rootClass]: true,{{#if sizing}}
    [`${rootClass}--size${size?.toUpperCase()}`]: typeof size !== "undefined",{{/if}}{{#each states}}
    [`is-{{this}}`]: is{{pascalCase this}},{{/each}}{{#if variants}}
    [`${rootClass}--${variant}`]: typeof variant !== "undefined",{{/if}}
    ...customClasses.reduce((a, c) => ({ ...a, [c]: true }), {}),
  };

  // Component mark-up goes here
  return html`
    <div
      class=${classMap(classList)}
      id=${ifDefined(globals.id)}>
    </div>

    {{#if example}}<!--
      {{{ example }}}
    -->{{/if}}
  `;
}
