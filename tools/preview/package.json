{
  "name": "@spectrum-css/preview",
  "version": "3.1.1",
  "description": "A Spectrum CSS preview",
  "license": "Apache-2.0",
  "author": "Adobe",
  "homepage": "https://opensource.adobe.com/spectrum-css/preview",
  "main": "main.js",
  "scripts": {
    "build": "yarn storybook",
    "clean": "rimraf storybook-static",
    "new": "yarn workspace @spectrum-css/generator new story",
    "start": "WATCH_MODE=true storybook dev --quiet --config-dir .",
    "storybook": "storybook build --quiet --config-dir .",
    "test": "chromatic --build-script-name build --junit-report",
    "test:scope": "yarn test --only-story-names"
  },
  "devDependencies": {
    "@adobe/spectrum-css-workflow-icons": "^1.2.1",
    "@babel/core": "^7.22.1",
    "@etchteam/storybook-addon-status": "^4.2.4",
    "@spectrum-css/addon-toolkit": "^1.0.0",
    "@spectrum-css/component-builder": "^4.0.12",
    "@spectrum-css/component-builder-simple": "^2.0.15",
    "@storybook/addon-a11y": "^7.0.24",
    "@storybook/addon-actions": "^7.0.24",
    "@storybook/addon-console": "^2.0.0",
    "@storybook/addon-docs": "^7.0.24",
    "@storybook/addon-essentials": "^7.0.24",
    "@storybook/addon-styling": "^1.3.1",
    "@storybook/client-api": "^7.0.24",
    "@storybook/components": "^7.0.24",
    "@storybook/core-events": "^7.0.24",
    "@storybook/manager-api": "^7.0.24",
    "@storybook/preview-api": "^7.0.24",
    "@storybook/theming": "^7.0.24",
    "@storybook/web-components-webpack5": "^7.0.24",
    "@whitespace/storybook-addon-html": "^5.1.6",
    "chromatic": "^6.19.9",
    "lit": "^2.7.4",
    "lodash-es": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.36",
    "postcss-prefix-selector": "^1.16.0",
    "postcss-selector-replace": "^1.0.2",
    "postcss-warn-cleaner": "^0.1.9",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-syntax-highlighter": "^15.5.0",
    "rimraf": "^5.0.1",
    "storybook": "^7.0.24",
    "webpack": "^5.88.0",
    "webpack-merge": "^5.9.0"
  },
  "nx": {
    "targets": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "inputs": [
          "{workspaceRoot}/assets",
          "{workspaceRoot}/decorators",
          "{workspaceRoot}/*.js",
          "{workspaceRoot}/*.html",
          "{projectRoot}/components/*/dist"
        ],
        "outputs": [
          "{workspaceRoot}/storybook-static"
        ]
      },
      "clean": {
        "inputs": [
          "{workspaceRoot}/storybook-static"
        ]
      }
    },
    "implicitDependencies": [
      "@spectrum-css/*",
      "!@spectrum-css/generator"
    ],
    "includedScripts": [
      "clean",
      "test",
      "test:scope",
      "storybook",
      "build"
    ]
  }
}
