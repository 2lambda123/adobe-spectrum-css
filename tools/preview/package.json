{
  "name": "@spectrum-css/preview",
  "version": "4.1.11",
  "description": "A Spectrum CSS preview",
  "license": "Apache-2.0",
  "author": "Adobe",
  "homepage": "https://opensource.adobe.com/spectrum-css/preview",
  "main": "main.js",
  "scripts": {
    "build": "yarn storybook",
    "clean": "rimraf storybook-static",
    "new": "yarn workspace @spectrum-css/generator new story",
    "start": "WATCH_MODE=true storybook dev --quiet --config-dir .",
    "storybook": "storybook build --quiet --config-dir .",
    "test": "chromatic --only-changed --build-script-name build --junit-report",
    "test:scope": "yarn test --only-story-names"
  },
  "devDependencies": {
    "@adobe/spectrum-css-workflow-icons": "^1.2.1",
    "@babel/core": "^7.22.1",
    "@etchteam/storybook-addon-status": "^4.2.4",
    "@spectrum-css/component-builder": "^4.0.14",
    "@spectrum-css/expressvars": "^3.0.9",
    "@spectrum-css/tokens": "^11.3.0",
    "@spectrum-css/vars": "^9.0.8",
    "@storybook/addon-a11y": "^7.3.2",
    "@storybook/addon-actions": "^7.3.2",
    "@storybook/addon-console": "^2.0.0",
    "@storybook/addon-docs": "^7.3.2",
    "@storybook/addon-essentials": "^7.3.2",
    "@storybook/api": "^7.3.2",
    "@storybook/blocks": "^7.3.2",
    "@storybook/client-api": "^7.3.2",
    "@storybook/components": "^7.3.2",
    "@storybook/core-events": "^7.3.2",
    "@storybook/manager-api": "^7.3.2",
    "@storybook/preview-api": "^7.3.2",
    "@storybook/theming": "^7.3.2",
    "@storybook/web-components-webpack5": "^7.3.2",
    "@whitespace/storybook-addon-html": "^5.1.6",
    "chromatic": "^6.23.0",
    "file-loader": "6.2.0",
    "lit": "^2.8.0",
    "lodash-es": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.28",
    "postcss-loader": "^7.3.3",
    "postcss-prefix-selector": "^1.16.0",
    "postcss-selector-replace": "^1.0.2",
    "prettier": "^3.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-syntax-highlighter": "^15.5.0",
    "rimraf": "^5.0.1",
    "source-map-loader": "^4.0.1",
    "storybook": "^7.3.2",
    "storybook-addon-pseudo-states": "^2.1.1",
    "style-loader": "3.3.3",
    "webpack": "^5.88.2"
  },
  "nx": {
    "name": "storybook",
    "targets": {
      "build": {
        "executor": "@nx/storybook:build",
        "options": {
          "outputDir": "{workspaceRoot}/storybook-static",
          "configDir": "{projectRoot}/tools/preview"
        },
        "dependsOn": [
          "^build"
        ],
        "inputs": [
          "{workspaceRoot}/assets/**",
          "{workspaceRoot}/decorators/**",
          "{workspaceRoot}/*.js",
          "{workspaceRoot}/*.html",
          "{projectRoot}/components/*/stories/**",
          "{projectRoot}/components/*/dist/**"
        ],
        "outputs": [
          "{options.outputDir}"
        ]
      },
      "storybook": {
        "executor": "@nx/storybook:storybook",
        "options": {
          "port": 4400,
          "configDir": "tools/preview",
          "docsMode": true
        },
        "dependsOn": [
          "^build"
        ],
        "inputs": [
          "{workspaceRoot}/assets/**",
          "{workspaceRoot}/decorators/**",
          "{workspaceRoot}/*.js",
          "{workspaceRoot}/*.html",
          "{projectRoot}/components/*/dist/**"
        ]
      },
      "clean": {
        "inputs": [
          "{workspaceRoot}/storybook-static/**"
        ],
        "outputs": []
      }
    },
    "implicitDependencies": [
      "@spectrum-css/*"
    ],
    "includedScripts": [
      "clean",
      "test",
      "test:scope",
      "start",
      "storybook",
      "build"
    ]
  }
}
