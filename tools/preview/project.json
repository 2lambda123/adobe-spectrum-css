{
	"tags": ["tooling"],
	"namedInputs": {
		"core": [
			"{workspaceRoot}/assets",
			"{workspaceRoot}/decorators",
			"{workspaceRoot}/*.js",
			"{workspaceRoot}/*.html",
			"{projectRoot}/components/*/dist"
		],
		"output": ["{workspaceRoot}/storybook-static"]
	},
	"targets": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["core"],
			"outputs": ["output"],
			"executor": "nx:run-commands",
			"options": {
				"cwd": "tools/preview",
				"command": "storybook build --quiet --config-dir ."
			}
		},
		"clean": {
			"inputs": ["output"],
			"outputs": [],
			"executor": "nx:run-commands",
			"options": {
				"cwd": "tools/preview",
				"command": "rimraf storybook-static"
			}
		},
		"start": {
			"dependsOn": ["^build"],
			"inputs": ["core"],
			"executor": "nx:run-commands",
			"options": {
				"cwd": "tools/preview",
				"env": {
					"NODE_ENV": "development",
					"WATCH_MODE": "true"
				},
				"command": "storybook dev --quiet --config-dir ."
			}
		},
		"storybook": {
			"dependsOn": ["^build"],
			"inputs": ["core"],
			"outputs": ["output"],
			"executor": "nx:run-commands",
			"options": {
				"cwd": "tools/preview",
				"command": "storybook build --quiet --config-dir ."
			}
		},
		"dev": {
			"dependsOn": ["^build"],
			"inputs": ["core"],
			"executor": "nx:run-commands",
			"options": {
				"cwd": "tools/preview",
				"command": "storybook dev --quiet --config-dir . --ci"
			}
		}
	},
	"implicitDependencies": ["tag:components"],
	"includedScripts": [
		"clean",
		"build",
		"storybook",
		"start",
		"dev",
		"test",
		"test:scope"
	]
}
