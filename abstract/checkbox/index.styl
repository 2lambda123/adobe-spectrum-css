$spectrum-checkbox-size = 12*$px
$spectrum-checkbox-radius = 2*$px

$spectrum-checkbox {
  display: inline-block
  position: relative
  padding: 7*$px 0
  font-size: 0
}

$spectrum-checkbox-input {
  position: absolute
  width: 100%
  height: 100%
  top: 0
  left: 0

  opacity: .0001
  z-index: 1
}

$spectrum-checkbox-description {
  margin: 0 8*$px
  font-size: $spectrum-font-size
  vertical-align: middle
  transition:color 150ms ease-in-out
}

$spectrum-checkbox-checkmark {
  display: inline-block
  box-sizing: border-box
  width: $spectrum-checkbox-size
  height: $spectrum-checkbox-size

  border-radius: $spectrum-checkbox-radius
  border-width: 2*$px
  border-style: solid

  vertical-align: middle

  transition: border $spectrum-transition-time ease-in-out, box-shadow $spectrum-transition-time ease-in-out

  &:after {
    position: absolute
    top: 11*$px
    left: 1*$px
    width: 10*$px
    height: 10*$px

    background-repeat: no-repeat
    background-position: center

    opacity: 0
    transform: scale(0)

    transition: opacity $spectrum-transition-time ease-in-out, transform $spectrum-transition-time ease-in-out

    content:''
  }
}

$spectrum-checkbox--checked-checkmark {
  border-width: 6*$px

  &:after {
    transform:scale(1)
    opacity:1
  }
}

$spectrum-checkbox--hover-checkmark {
  box-shadow: none;
}

$spectrum-checkbox--focus-checkmark {
  box-shadow: 0 0 0 1*$px
}

$spectrum-checkbox--indeterminate-checkmark {
  border-top-width: 5*$px
  border-bottom-width: 5*$px
}
