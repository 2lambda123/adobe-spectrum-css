@require '../commons'

$spectrum-button {
  &:focus {
    box-shadow-color: $spectrum-color-button-border-focus
  }

  &:hover {
    box-shadow: none
  }

  &:active {
    box-shadow: none
  }
}

$spectrum-button-icon {
  color: $spectrum-color-button-icon
}

$spectrum-button-icon-hover {
  color: $spectrum-color-button-icon-hover
}

$spectrum-button-icon-active {
  color: $spectrum-color-button-icon-active
}

$spectrum-button-icon-selected {
  color: $spectrum-color-button-icon-selected
}

$spectrum-button--primary {
  background-color: $spectrum-color-button-background

  border-color: $spectrum-color-button-border

  color: $spectrum-color-button-text

  &:focus {
    background-color: $spectrum-color-button-background-focus

    color: $spectrum-color-button-text-focus

    border-color: $spectrum-color-button-border-focus
  }

  &:hover {
    background-color: $spectrum-color-button-background-hover

    border-color: $spectrum-color-button-border-hover

    color: $spectrum-color-button-text-hover
  }

  &:active {
    background-color: $spectrum-color-button-background-active

    border-color: $spectrum-color-button-border-active

    color: $spectrum-color-button-text-active
  }

  &:disabled,
  &[disabled] {
    background-color: $spectrum-color-button-background-disabled

    color: $spectrum-color-button-text-disabled

    border-color: $spectrum-color-button-border-disabled
  }
}

