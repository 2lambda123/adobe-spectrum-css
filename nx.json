{
	"schema": "./node_modules/nx/schemas/nx-schema.json",
	"npmScope": "@spectrum-css",
	"cli": {
		"packageManager": "yarn"
	},
	"tasksRunnerOptions": {
		"default": {
			"runner": "nx/tasks-runners/default",
			"options": {
				"cacheableOperations": ["build", "start"]
			}
		}
	},
	"targetDefaults": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": [
				"{workspaceRoot}/index.css",
				"{workspaceRoot}/skin.css",
				"{workspaceRoot}/themes/spectrum.css",
				"{workspaceRoot}/themes/express.css"
			],
			"outputs": ["{workspaceRoot}/dist"]
		},
		"start": {
			"dependsOn": ["^build"]
		}
	},
	"includedScripts": ["build", "start"]
}
