{
	"name": "progressbar",
	"tags": ["component"],
	"targets": {
		"build": {
			"executor": "nx:run-commands",
			"options": {
				"commands": [
					"node ./tasks/build.mjs $NX_TASK_TARGET_PROJECT",
					"cd ./components/$NX_TASK_TARGET_PROJECT && prettier --ignore-unknown --no-error-on-unmatched-pattern --write dist/**/* dist/* metadata/*.md"
				],
				"parallel": false
			}
		},
		"clean": {
			"executor": "nx:run-commands",
			"options": {
				"command": "rimraf components/$NX_TASK_TARGET_PROJECT/dist"
			}
		},
		"dev": {
			"dependsOn": ["build", "watch"],
			"executor": "nx:noop"
		},
		"test": {
			"executor": "nx:run-commands",
			"options": {
				"command": "nx run storybook:test:scope -- $NX_TASK_TARGET_PROJECT"
			}
		},
		"watch": {
			"executor": "nx:run-commands",
			"options": {
				"command": "nx watch --projects $NX_TASK_TARGET_PROJECT -- nx run $NX_PROJECT_NAME:build"
			}
		}
	},
	"includedScripts": ["build", "clean", "dev", "test", "watch"]
}
