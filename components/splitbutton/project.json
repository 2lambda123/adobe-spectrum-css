{
	"schema": "../../node_modules/nx/schemas/project-schema.json",
	"name": "splitbutton",
	"sourceRoot": "components/splitbutton",
	"tags": ["component"],
	"targets": {
		"build": {
			"executor": "nx:run-commands",
			"options": {
				"cwd": "components/splitbutton",
				"commands": [
					"postcss --no-map index.css --output dist/index.css"
				]
			}
		},
		"clean": {
			"executor": "nx:run-commands",
			"options": {
				"cwd": "components/splitbutton",
				"command": "rimraf dist"
			}
		},
		"dev": {
			"dependsOn": ["build", "watch"],
			"executor": "nx:noop"
		},
		"test": {
			"executor": "nx:run-commands",
			"options": {
				"command": "nx run storybook:test:scope -- $NX_TASK_TARGET_PROJECT"
			}
		},
		"lint": {
			"executor": "nx:run-commands",
			"options": {
				"command": "prettier --cwd ./components/$NX_TASK_TARGET_PROJECT --ignore-unknown --no-error-on-unmatched-pattern --check dist/**/* dist/* metadata/*.md"
			}
		},
		"watch": {
			"executor": "nx:run-commands",
			"options": {
				"command": "nx watch --projects $NX_TASK_TARGET_PROJECT -- nx run $NX_PROJECT_NAME:build"
			}
		}
	},
	"includedScripts": ["build", "clean", "dev", "test", "watch"]
}
