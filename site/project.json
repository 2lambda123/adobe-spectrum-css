{
	"$schema": "../node_modules/nx/schemas/project-schema.json",
	"name": "docs",
	"tags": ["tooling"],
	"implicitDependencies": ["tag:component", "ui-icons"],
	"namedInputs": {
		"core": ["{projectRoot}/*.pug"],
		"tools": [
			"{projectRoot}/includes",
			"{projectRoot}/resources",
			"{projectRoot}/templates",
			"{projectRoot}/index.js",
			"{projectRoot}/util.js",
			"{projectRoot}/.eleventy.js"
		]
	},
	"targets": {
		"clean": {},
		"build": {
			"dependsOn": ["^build", "clean"],
			"outputs": ["{workspaceRoot}/dist"],
			"options": {
				"cwd": "{projectRoot}",
				"commands": ["eleventy"]
			}
		},
		"start": {
			"cache": true,
			"dependsOn": ["^build", "clean"],
			"inputs": ["core", "tools"],
			"outputs": ["{workspaceRoot}/dist"],
			"executor": "nx:run-commands",
			"options": {
				"cwd": "{projectRoot}",
				"commands": ["eleventy --serve --incremental"]
			}
		}
	}
}
