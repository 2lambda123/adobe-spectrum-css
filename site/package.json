{
  "private": true,
  "name": "@spectrum-css/documentation",
  "version": "0.0.0-alpha.0",
  "description": "The Spectrum CSS documentation builder",
  "license": "Apache-2.0",
  "author": "Adobe",
  "homepage": "https://opensource.adobe.com/spectrum-css/",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/spectrum-css.git",
    "directory": "site"
  },
  "bugs": {
    "url": "https://github.com/adobe/spectrum-css/issues"
  },
  "scripts": {
    "build": "gulp build -LLL",
    "clean": "rimraf ../dist",
    "dev": "gulp dev -LLL",
    "watch": "gulp watch"
  },
  "devDependencies": {
    "browser-sync": "^2.29.3",
    "dependency-solver": "^1.0.6",
    "gulp": "^4.0.0",
    "gulp-data": "^1.3.1",
    "gulp-pug": "^4.0.1",
    "js-yaml": "^4.1.0",
    "loadicons": "^1.0.0",
    "lunr": "^2.3.6",
    "markdown-it": "^12.3.2",
    "npm-registry-fetch": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "prismjs": "^1.23.0",
    "pug": "^3.0.1",
    "replace-ext": "^1.0.0",
    "rimraf": "^5.0.1",
    "through2": "^3.0.1"
  },
  "nx": {
    "name": "site",
    "targets": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "inputs": [
          "{workspaceRoot}/includes/**",
          "{workspaceRoot}/resources/**",
          "{workspaceRoot}/templates/**",
          "{workspaceRoot}/*.pug",
          "{workspaceRoot}/gulpfile.js",
          "{workspaceRoot}/util.js",
          "{projectRoot}/components/*/dist/**"
        ],
        "outputs": [
          "{projectRoot}/dist"
        ]
      },
      "clean": {
        "inputs": [
          "{projectRoot}/dist/**"
        ],
        "outputs": []
      }
    },
    "implicitDependencies": [
      "@spectrum-css/*",
      "storybook"
    ],
    "includedScripts": [
      "clean",
      "dev",
      "build"
    ]
  }
}
