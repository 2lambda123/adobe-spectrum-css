{
  "name": "@spectrum-css/documentation",
  "version": "1.0.0",
  "description": "Spectrum CSS's documentation site.",
  "license": "Apache-2.0",
  "author": "Adobe",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/spectrum-css.git",
    "directory": "site"
  },
  "bugs": {
    "url": "https://github.com/adobe/spectrum-css/issues"
  },
  "main": ".eleventy.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production eleventy",
    "dev": "cross-env WATCH_MODE=true NODE_ENV=development yarn start --incremental",
    "start": "eleventy --serve"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-dev-server": "^1.0.4",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@11ty/eleventy-plugin-bundle": "^1.0.4",
    "@11ty/eleventy-plugin-directory-output": "^1.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "cross-env": "^7.0.3",
    "eleventy-plugin-code-clipboard": "^0.1.0",
    "eleventy-plugin-nesting-toc": "^1.3.0",
    "esbuild": "^0.17.19",
    "esbuild-plugin-svg": "^0.1.0",
    "fast-glob": "^3.2.12",
    "js-yaml": "^4.1.0",
    "lunr": "^2.3.9",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-attrs": "^4.1.6",
    "markdown-it-prism": "^2.3.0",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.4",
    "outdent": "^0.8.0",
    "postcss": "^7.0.36",
    "postcss-load-config": "^3.1.0",
    "prismjs": "^1.29.0",
    "rimraf": "^5.0.0"
  },
  "nx": {
    "namedInputs": {
      "core": [
        "{workspaceRoot}/_data",
        "{workspaceRoot}/_includes",
        "{workspaceRoot}/_layouts",
        "{workspaceRoot}/assets",
        "{workspaceRoot}/content",
        "{workspaceRoot}/utils",
        "{workspaceRoot}/.eleventy.js",
        "{workspaceRoot}/postcss.config.js",
        "{projectRoot}/components/*/dist/*.css"
      ],
      "output": [
        "{workspaceRoot}/dist"
      ]
    },
    "targets": {
      "build": {
        "dependsOn": [
          "clean",
          "^build"
        ],
        "inputs": [
          "core"
        ],
        "outputs": [
          "output"
        ]
      },
      "start": {
        "dependsOn": [
          "^build"
        ],
        "inputs": [
          "core"
        ],
        "outputs": [
          "output"
        ]
      },
      "dev": {
        "dependsOn": [
          "^build",
          "^watch"
        ],
        "inputs": [
          "core"
        ],
        "outputs": [
          "output"
        ]
      }
    },
    "implicitDependencies": [
      "tag:component",
      "@spectrum-css/preview"
    ],
    "includedScripts": [
      "build",
      "dev",
      "start"
    ]
  }
}
