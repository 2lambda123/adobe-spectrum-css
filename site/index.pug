doctype html
html
  head
    meta(charset = 'utf-8')
    meta('http-equiv' = 'X-UA-Compatible', content = 'IE=edge,chrome=1')
    title Spectrum CSS
    meta(name='viewport', content='user-scalable=no,initial-scale = 1.0,maximum-scale = 1.0')

    link(rel='stylesheet', type='text/css', href='packages/vars/dist/spectrum-global.css')
    link(rel='stylesheet', type='text/css', href='packages/vars/dist/spectrum-lightest.css')
    link(rel='stylesheet', type='text/css', href='packages/vars/dist/spectrum-light.css')
    link(rel='stylesheet', type='text/css', href='packages/vars/dist/spectrum-dark.css')
    link(rel='stylesheet', type='text/css', href='packages/vars/dist/spectrum-darkest.css')
    link(rel='stylesheet', type='text/css', href='packages/vars/dist/spectrum-medium.css')
    link(rel='stylesheet', type='text/css', href='packages/vars/dist/spectrum-large.css')

    link(rel='stylesheet', type='text/css', href='packages/page/dist/index.css')
    link(rel='stylesheet', type='text/css', href='packages/typography/dist/index.css')
    link(rel='stylesheet', type='text/css', href='packages/sidenav/dist/index.css')
    link(rel='stylesheet', type='text/css', href='packages/link/dist/index.css')

    link(rel='stylesheet', type='text/css', href='css/site.css')

    script(src='js/site.js')
    script(src='js/typekit.js')

  body.spectrum.spectrum--light.spectrum--medium
    .spectrum-Site
      .spectrum-Site-sideBar
        a.spectrum-Site-header(href='home.html',target='mainContainer')
          img.spectrum-Site-logo(src='img/spectrum_logo_light.svg', alt='Spectrum Logo')
          h2.spectrum-Site-title.spectrum-Heading3 Spectrum CSS
          // #{pkg.version}

        .u-scrollable.spectrum-Site-nav
          nav
            ul.spectrum-SideNav.spectrum-SideNav--multiLevel
              li.spectrum-SideNav-item
                a.spectrum-SideNav-itemLink(href='#') Getting Started
              li.spectrum-SideNav-item
                a.spectrum-SideNav-itemLink(href='https://github.com/adobe/spectrum-css',target='_blank') Github
              li.spectrum-SideNav-item
                a.spectrum-SideNav-itemLink(href='#') Components
                ul.spectrum-SideNav.spectrum-SideNav--multiLevel
                  each component in nav
                    li.spectrum-SideNav-item
                      a.spectrum-SideNav-itemLink.js-componentLink(href=component.url, target='mainContainer', data-component=component.component, data-example=component.example)= component.name

          nav.spectrum-Site-bottomNav
            ul.spectrum-SideNav
              li.spectrum-SideNav-item
                a.spectrum-SideNav-itemLink(href='http://opensource.adobe.com/spectrum',target='_blank') Spectrum

      iframe(name='mainContainer',src='home.html').spectrum-Site-mainContainer
