<section class="spectrum-CSSComponent-section spectrum-Typography">
  <header class="spectrum-CSSComponent-sectionHeading" id="{{ section.id | slugify }}">
    {% set sectionTitle %}{% if section.title %}{{ section.title }}{% else %}{{ section.name }}{% endif %}{% endset %}
  {% if sectionTitle %}
      <h2 class="spectrum-Heading spectrum-Heading--sizeM" id="{% if section.id %}{{ section.id | slugify }}{% else %}{{ sectionTitle | slugify }}{% endif %}">
        <a href="#{% if section.id %}{{ section.id | slugify }}{% else %}">{{ sectionTitle }}</a>
      </h2>
      <hr class="spectrum-Divider spectrum-Divider--large"/>
  {% endif %}
  {% if section.description or section.details -%}
    {% if section.description -%}
      <div class="spectrum-CSSExample-description spectrum-Body spectrum-Body--sizeM">
        {{ section.description | markdownify | safe }}
      </div>
    {%- endif %}
    {% if section.details -%}
      <div class="spectrum-CSSExample-description spectrum-Body spectrum-Body--sizeM">
      {{ section.details | markdownify | safe }}
      </div>
    {%- endif %}
  {% endif %}
  </header>

  {% if section.markup -%}
    {% set example = { markup: section.markup } %}
    {% include "example.njk" %}
  {% endif %}
</section>
