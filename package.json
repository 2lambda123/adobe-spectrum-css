{
  "private": true,
  "name": "spectrum-css-monorepo",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "author": "Adobe",
  "contributors": [
    "Cassondra Roberts <castastrophe@users.noreply.github.com> (https://allons-y.llc)",
    "Garth Braithwaite <garthdb@gmail.com> (https://garthdb.com)",
    "Larry Davis <lazdnet@gmail.com>",
    "Patrick Fulton <pfulton@users.noreply.github.com>",
    "Steve Gill <stevengill97@gmail.com>"
  ],
  "homepage": "https://opensource.adobe.com/spectrum-css/",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/spectrum-css.git"
  },
  "bugs": {
    "url": "https://github.com/adobe/spectrum-css/issues"
  },
  "scripts": {
    "build": "run-s build:components build:site build:preview",
    "build:clean": "run-s clean build",
    "build:components": "turbo run build --filter \"./components/*\"",
    "build:preview": "turbo run @spectrum-css/preview#build",
    "postbuild:preview": "rimraf dist/preview && mv tools/preview/storybook-static dist/preview",
    "build:site": "turbo run @spectrum-css/documentation#build",
    "check:peerDeps": "node ./tasks/checkPeerDependencies.js ./components",
    "ci-all": "yarn build --no-cache",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "new": "turbo run @spectrum-css/generator#new",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "prerelease": "yarn build:components",
    "release:site": "turbo run @spectrum-css/documentation#publish --no-cache",
    "start": "NODE_ENV=development turbo run @spectrum-css/preview#start",
    "test": "turbo run @spectrum-css/preview#test",
    "test:scope": "turbo run @spectrum-css/preview#test:scope",
    "watch": "turbo run watch"
  },
  "workspaces": [
    "components/*",
    "plugins/*",
    "tools/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "fast-glob": "^3.2.12",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "prettier-package-json": "^2.8.0",
    "rimraf": "^4.4.1",
    "semver": "^7.3.8",
    "turbo": "^1.8.7",
    "yargs": "^17.7.1"
  },
  "lint-staged": {
    "components/*/*.css": [
      "prettier --write"
    ],
    "components/*/metadata/*.yml": [
      "prettier --write"
    ],
    "components/*/stories/*.js": [
      "prettier --write"
    ],
    "components/*/README.md": [
      "prettier --write"
    ],
    "components/*/package.json": [
      "node ./tasks/packageLint.js",
      "prettier-package-json --write"
    ],
    "package.json": [
      "prettier-package-json --write"
    ],
    "tools/**/*.js": [
      "prettier --write"
    ],
    "tasks/*.js": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@1.22.17"
}
