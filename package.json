{
  "private": true,
  "name": "spectrum-css-monorepo",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "author": "Adobe",
  "homepage": "https://opensource.adobe.com/spectrum-css/",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/spectrum-css.git"
  },
  "bugs": {
    "url": "https://github.com/adobe/spectrum-css/issues"
  },
  "scripts": {
    "build": "yarn builder tag:component",
    "build:site": "nx build docs",
    "build:storybook": "nx build storybook",
    "builder": "nx run-many --target build --projects",
    "cache:clean": "nx reset",
    "ci": "NODE_ENV=production yarn builder tag:component",
    "ci:storybook": "nx run storybook:build:ci",
    "clean": "yarn cleaner tag:component",
    "clean:docs": "rimraf dist",
    "clean:storybook": "nx clean storybook",
    "cleaner": "nx run-many --target clean --skip-nx-cache --projects ",
    "compare": "nx run-many --verbose --target compare --projects",
    "compare:all": "node ./tasks/compare-compiled-output.js",
    "dev": "nx start docs",
    "format": "yarn formater tag:component",
    "format:tools": "yarn formater tag:tooling",
    "formatter": "nx run-many --target format --projects ",
    "preinstall": "command -v nvm >/dev/null 2>&1 && nvm use || exit 0",
    "lint": "yarn linter tag:component",
    "lint:tools": "yarn linter tag:tooling",
    "linter": "nx run-many --verbose --target lint --projects ",
    "new": "nx run generator:new",
    "precommit": "lint-staged",
    "prepare": "husky install && run-p refresh:*",
    "prepublish:site": "yarn build:site",
    "publish:site": "gh-pages -d dist/ -f -e .",
    "refresh:directory": "test -n $BASH_VERSION && bash ./tasks/clean-up-after-migration.sh || exit 0",
    "refresh:env": "test -n $BASH_VERSION && bash ./tasks/copy-env-from-root.sh || exit 0",
    "prerelease": "nx affected --target build",
    "release": "lerna publish --no-private",
    "release:beta": "lerna publish from-package --no-private --preid beta --pre-dist-tag beta --conventional-prerelease",
    "release:from-package": "lerna publish from-package --no-private",
    "start": "NODE_ENV=development nx start storybook",
    "test": "nx test storybook",
    "test:plugins": "yarn test tag:postcss,tag:stylelint",
    "test:tools": "yarn test tag:tooling",
    "tester": "nx run storybook:test:scope",
    "watch": "nx watch --includeDependentProjects --projects tag:component -- nx run \\$NX_PROJECT_NAME:build"
  },
  "workspaces": [
    ".github/actions/*",
    "components/*",
    "plugins/*",
    "tokens",
    "ui-icons",
    "site",
    ".storybook",
    "generator"
  ],
  "devDependencies": {
    "@adobe/spectrum-css-workflow-icons": "^1.5.4",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@nx/eslint-plugin": "^17.2.4",
    "@nx/js": "^17.2.4",
    "@nx/storybook": "^17.2.4",
    "@spectrum-css/expressvars": "^3.0.9",
    "@spectrum-css/vars": "^9.0.8",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "c8": "^8.0.1",
    "colors": "^1.4.0",
    "cssnano": "^6.0.2",
    "cssnano-preset-lite": "^3.0.1",
    "diff": "^5.1.0",
    "diff2html": "^3.4.45",
    "eslint": "^8.55.0",
    "gh-pages": "^6.1.0",
    "glob-concat-cli": "^1.0.1",
    "husky": "^8.0.3",
    "lerna": "^8.0.0",
    "lint-staged": "^15.2.0",
    "npm-registry-fetch": "^16.1.0",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.4",
    "nx": "^17.2.4",
    "open": "^9.1.0",
    "postcss": " ^8.4.32",
    "postcss-cli": " ^11.0.0",
    "postcss-discard-comments": "^6.0.1",
    "postcss-extend-rule": "^4.0.0",
    "postcss-import": "^15.1.0",
    "postcss-inherit": "^4.1.0",
    "postcss-nested": "^6.0.1",
    "postcss-preset-env": "^9.3.0",
    "postcss-reporter": "^7.0.5",
    "prettier": "^2.8.8",
    "prettier-package-json": "^2.8.0",
    "prettier-plugin-sh": "^0.13.1",
    "rimraf": "^5.0.5",
    "stylelint": "^15.11.0",
    "stylelint-config-clean-order": "^5.2.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^35.0.0",
    "stylelint-header": "^1.0.0",
    "stylelint-high-performance-animation": "^1.9.0",
    "stylelint-selector-bem-pattern": "^3.0.1",
    "stylelint-use-logical": "^2.1.0",
    "tar": "^6.2.0",
    "typescript": "^5.3.3",
    "wallace-cli": "^3.0.0",
    "yargs": "^17.7.2"
  },
  "engines": {
    "node": ">=18"
  },
  "browserslist": [
    "last 2 Edge versions",
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 iOS versions"
  ],
  "lint-staged": {
    "*.css": [
      "stylelint --fix --quiet"
    ],
    "*.md": [
      "prettier --write"
    ],
    "*.js,*.json": [
      "eslint --fix --quiet"
    ],
    "package.json": [
      "prettier-package-json --write"
    ],
    "tasks/*.sh": [
      "prettier --plugin prettier-plugin-sh --write"
    ]
  }
}
