{
  "private": true,
  "name": "spectrum-css-monorepo",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "author": "Adobe",
  "contributors": [
    "Cassondra Roberts <castastrophe@users.noreply.github.com> (https://allons-y.llc)",
    "Garth Braithwaite <garthdb@gmail.com> (https://garthdb.com)",
    "Larry Davis <lazdnet@gmail.com>",
    "Patrick Fulton <pfulton@users.noreply.github.com>",
    "Rajdeep Chandra <rajrock38@gmail.com>",
    "Steve Gill <stevengill97@gmail.com>"
  ],
  "homepage": "https://opensource.adobe.com/spectrum-css/",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/spectrum-css.git"
  },
  "bugs": {
    "url": "https://github.com/adobe/spectrum-css/issues"
  },
  "scripts": {
    "prebuild": "yarn build:components",
    "build": "run-s build:docs build:preview",
    "prebuild:clean": "run-p clean:components",
    "build:clean": "run-s build:components build:docs build:preview",
    "build:components": "lerna run --stream --scope \"@spectrum-css/*\" --ignore \"@spectrum-css/{*-builder*,preview,generator,documentation}\" build",
    "postbuild:components": "yarn docs:mod",
    "prebuild:docs": "yarn workspace @spectrum-css/documentation clean",
    "build:docs": "yarn workspace @spectrum-css/documentation build",
    "build:preview": "yarn workspace @spectrum-css/preview build",
    "postbuild:preview": "yarn clean:preview && mv tools/preview/storybook-static dist/preview",
    "check:peerDeps": "node ./tasks/checkPeerDependencies.js ./components",
    "ci-all": "yarn build",
    "clean:components": "lerna exec --stream --scope \"@spectrum-css/*\" --ignore \"@spectrum-css/{*-builder*,preview,generator,documentation}\" -- rimraf dist",
    "clean:docs": "yarn workspace @spectrum-css/documentation clean",
    "clean:preview": "rimraf dist/preview",
    "predev": "yarn build:components",
    "dev": "NODE_ENV=development run-p dev:components dev:preview",
    "dev:components": "yarn watch",
    "dev:docs": "yarn workspace @spectrum-css/documentation run dev",
    "dev:preview": "yarn workspace @spectrum-css/preview start",
    "docs:mod": "node tasks/mod-extractor.js",
    "lint:components": "node ./tasks/packageLint.js",
    "new": "yarn workspace @spectrum-css/generator new",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "prerelease": "yarn version:build",
    "release": "lerna publish",
    "release:beta-from-package": "yarn release from-package --conventional-prerelease --preid beta --pre-dist-tag beta --no-private",
    "release:site": "gulp prepareSite && gh-pages -d dist-site/ -f -e .",
    "start": "yarn dev:preview",
    "test": "yarn workspace @spectrum-css/preview test",
    "test:scope": "yarn workspace @spectrum-css/preview test:scope",
    "version:build": "SCOPES=($(lerna changed)) && IFS=, SCOPE=\"${SCOPES[*]}\" && [[ \"${#SCOPES[@]}\" -gt 1 ]] && SCOPE=\"{${SCOPE}}\"; lerna run --stream --scope \"${SCOPE}\" --ignore \"@spectrum-css/{*-builder*,preview,generator,documentation}\" build",
    "watch": "gulp watch"
  },
  "workspaces": [
    "components/*",
    "tools/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.3.3",
    "@commitlint/config-conventional": "^8.3.3",
    "del": "^5.0.0",
    "gh-pages": "^3.0.0",
    "gulp": "^4.0.0",
    "gulp-replace": "^1.0.0",
    "husky": "^8.0.3",
    "lerna": "^4.0.0",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "prettier-package-json": "^2.8.0",
    "rimraf": "^4.1.1",
    "semver": "^7.3.8",
    "through2": "^3.0.1",
    "yargs": "^17.6.2"
  },
  "lint-staged": {
    "components/*/package.json": [
      "yarn lint:components",
      "prettier-package-json --write"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}
