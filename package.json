{
  "private": true,
  "name": "spectrum-css-monorepo",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "author": "Adobe",
  "contributors": [
    "Cassondra Roberts <castastrophe@users.noreply.github.com> (https://allons-y.llc)",
    "Garth Braithwaite <garthdb@gmail.com> (https://garthdb.com)",
    "Larry Davis <lazdnet@gmail.com>",
    "Patrick Fulton <pfulton@users.noreply.github.com>",
    "Steve Gill <stevengill97@gmail.com>"
  ],
  "homepage": "https://opensource.adobe.com/spectrum-css/",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/spectrum-css.git"
  },
  "bugs": {
    "url": "https://github.com/adobe/spectrum-css/issues"
  },
  "scripts": {
    "build": "yarn build:components",
    "build:all": "run-s build:site mv:preview",
    "build:clean": "run-s clean build",
    "build:components": "nx run-many --all --exclude=\"tag:tooling\" --target=build",
    "postbuild:components": "yarn docs:mod",
    "build:preview": "nx build preview",
    "build:site": "nx build documentation",
    "cache:clean": "nx reset",
    "ci": "yarn build:components --skip-nx-cache",
    "ci:storybook": "nx storybook preview --skip-nx-cache",
    "clean": "yarn cache:clean && run-p clean:*",
    "clean:components": "rimraf components/*/dist",
    "clean:preview": "nx clean preview",
    "clean:site": "nx clean documentation",
    "dev": "CHROMATIC_URL=\"http://localhost:8888\" NODE_ENV=development nx start documentation --port 8888",
    "docs:mod": "node tasks/mod-extractor.js",
    "postdocs:mod": "prettier --cache --write components/*/metadata/*.md > /dev/null",
    "fix:styles": "stylelint --fix \"components/**/*.css\" \"!components/*/dist/**\"",
    "lint": "run-p lint:*",
    "lint:components": "node ./tasks/packageLint.js",
    "lint:styles": "stylelint \"components/**/*.css\" \"!components/*/dist/**\"",
    "mv:preview": "[[ -d \"tools/preview/storybook-static\" ]] && rimraf dist/preview && mv tools/preview/storybook-static dist/preview || exit 0",
    "new": "nx run generator:new",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "prepare:site": "run-s clean:site build:all",
    "prerelease": "nx affected -t build",
    "release": "lerna publish",
    "release:beta-from-package": "yarn release from-package --conventional-prerelease --preid beta --pre-dist-tag beta --no-private",
    "prerelease:site": "yarn prepare:site",
    "release:site": "gh-pages -d dist/ -f -e .",
    "start": "nx start preview",
    "start:site": "nx start documentation",
    "test": "nx test preview",
    "test:scope": "nx test:scope preview",
    "watch": " nx watch --all --includeDependentProjects -- nx build \\$NX_PROJECT_NAME"
  },
  "workspaces": [
    "components/*",
    "tools/*",
    "plugins/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "fast-glob": "^3.3.1",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.3",
    "lerna": "^6.6.2",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "nx": "^16.6.0",
    "prettier": "^2.8.8",
    "prettier-package-json": "^2.8.0",
    "rimraf": "^5.0.1",
    "semver": "^7.5.1",
    "stylelint": "^15.10.2",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-use-logical": "^2.1.0",
    "yargs": "^17.7.2"
  },
  "engines": {
    "node": ">=14 <=18.x"
  },
  "browserslist": [
    "last 2 Edge versions",
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 iOS versions"
  ],
  "lint-staged": {
    "components/*/package.json": [
      "yarn lint:components",
      "prettier-package-json --write"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}
