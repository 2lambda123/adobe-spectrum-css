{
  "private": true,
  "name": "spectrum-css-monorepo",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "author": "Adobe",
  "homepage": "https://opensource.adobe.com/spectrum-css/",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/spectrum-css.git"
  },
  "bugs": {
    "url": "https://github.com/adobe/spectrum-css/issues"
  },
  "scripts": {
    "build": "yarn build:components",
    "build:all": "run-s build:preview build:site",
    "postbuild:all": "yarn mv:preview",
    "build:clean": "run-s clean build",
    "build:components": "nx run-many --target build --projects \"@spectrum-css/*\" --exclude \"@spectrum-css/generator @spectrum-css/preview @spectrum-css/bundle-builder @spectrum-css/component-builder @spectrum-css/component-builder-simple\"",
    "postbuild:components": "yarn docs:mod",
    "build:preview": "nx build storybook",
    "build:site": "nx build site",
    "cache:clean": "nx reset",
    "ci": "yarn build:all",
    "ci:storybook": "nx run storybook:build:ci",
    "clean": "yarn cache:clean && run-p clean:*",
    "clean:components": "nx run-many --target clean --projects \"@spectrum-css/*\" --exclude \"@spectrum-css/generator @spectrum-css/preview @spectrum-css/bundle-builder @spectrum-css/component-builder @spectrum-css/component-builder-simple\"",
    "clean:preview": "nx clean storybook",
    "clean:site": "nx clean site",
    "precompare": "yarn build",
    "compare": "node ./tasks/compare-compiled-output.js",
    "dev": "nx start site",
    "docs:mod": "node tasks/mod-extractor.js",
    "postdocs:mod": "prettier --cache --write components/*/metadata/*.md > /dev/null",
    "preinstall": "command -v nvm >/dev/null 2>&1 && nvm use || exit 0",
    "mv:preview": "test -d .storybook/storybook-static && rimraf dist/preview && mv .storybook/storybook-static dist/preview || exit 0",
    "new": "nx run @spectrum-css/generator:new",
    "precommit": "lint-staged",
    "prepare": "husky install && run-p refresh:*",
    "refresh:directory": "test -n $BASH_VERSION && bash ./tasks/clean-up-after-migration.sh || exit 0",
    "refresh:env": "test -n $BASH_VERSION && bash ./tasks/copy-env-from-root.sh || exit 0",
    "prerelease": "nx affected --target build",
    "release": "lerna publish",
    "release:beta-from-package": "yarn release from-package --conventional-prerelease --preid beta --pre-dist-tag beta --no-private",
    "prerelease:site": "yarn build:site",
    "release:site": "gh-pages -d dist/ -f -e .",
    "start": "nx start storybook",
    "test": "nx test storybook",
    "test:scope": "nx run storybook:test:scope"
  },
  "workspaces": [
    "components/*",
    "tools/*",
    "plugins/*",
    "tokens",
    "ui-icons",
    "site",
    "generator",
    ".storybook",
    ".github/actions/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@nx/devkit": "^17.0.2",
    "@spectrum-css/expressvars": "^3.0.9",
    "@spectrum-css/vars": "^9.0.8",
    "colors": "^1.4.0",
    "conventional-changelog-spectrum": "^1.0.2",
    "diff": "^5.1.0",
    "diff2html": "^3.4.45",
    "fast-glob": "^3.3.2",
    "gh-pages": "^6.0.0",
    "husky": "^8.0.3",
    "lerna": "^6.6.2",
    "lint-staged": "^14.0.0",
    "lodash": "^4.17.21",
    "npm-registry-fetch": "^16.1.0",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.4",
    "nx": "^17.0.3",
    "prettier": "^2.8.8",
    "prettier-package-json": "^2.8.0",
    "rimraf": "^5.0.5",
    "semver": "^7.5.1",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-use-logical": "^2.1.0",
    "tar": "^6.2.0",
    "yargs": "^17.7.2"
  },
  "engines": {
    "node": ">=18"
  },
  "browserslist": [
    "last 2 Edge versions",
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 iOS versions"
  ],
  "lint-staged": {
    "*.css": [
      "stylelint --fix --quiet"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}
