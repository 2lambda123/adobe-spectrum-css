{
    "private": true,
    "name": "spectrum-css-monorepo",
    "version": "0.0.0",
    "license": "Apache-2.0",
    "author": "Adobe",
    "homepage": "https://opensource.adobe.com/spectrum-css/",
    "repository": {
        "type": "git",
        "url": "https://github.com/adobe/spectrum-css.git"
    },
    "bugs": {
        "url": "https://github.com/adobe/spectrum-css/issues"
    },
    "scripts": {
        "build": "nx run-many --target build --projects ",
        "build:lib": "yarn build tag:component",
        "build:components": "yarn build:lib # alias for backwards compat",
        "build:site": "nx build site",
        "build:storybook": "nx build storybook",
        "cache:clean": "nx reset",
        "ci": "NODE_ENV=production yarn build tag:component",
        "clean": "nx run-many --target clean --skip-nx-cache --projects ",
        "clean:lib": "yarn clean tag:component",
        "precompare": "yarn build:lib",
        "compare": "node ./tasks/compare-compiled-output.js",
        "dev": "yarn start:site",
        "format": "nx run-many --target format --projects ",
        "format:lib": "yarn format tag:component",
        "format:tools": "yarn format tag:tooling",
        "lint": "nx run-many --target lint --projects ",
        "lint:lib": "yarn lint tag:component",
        "lint:tools": "yarn lint tag:tooling",
        "new": "nx run generator:new",
        "precommit": "lint-staged",
        "preinstall": "command -v nvm >/dev/null 2>&1 && nvm use || exit 0",
        "prepare": "husky install && run-p refresh:*",
        "prepublish:site": "yarn build:site",
        "publish:site": "gh-pages -d dist/ -f -e .",
        "refresh:directory": "test -n $BASH_VERSION && bash ./tasks/clean-up-after-migration.sh || exit 0",
        "refresh:env": "test -n $BASH_VERSION && bash ./tasks/copy-env-from-root.sh || exit 0",
        "prerelease": "nx affected --target build",
        "release": "lerna publish --no-private",
        "release:beta": "lerna publish from-package --no-private --preid beta --pre-dist-tag beta --conventional-prerelease",
        "release:from-package": "lerna publish from-package --no-private",
        "start": "run-p watch:lib start:storybook",
        "start:site": "nx start site",
        "start:storybook": "nx start storybook",
        "test": "nx test storybook",
        "test:lib": "nx test storybook",
        "test:plugins": "yarn test tag:postcss,tag:stylelint",
        "test:tools": "yarn test tag:tooling",
        "watch": "nx run-many --target watch --projects",
        "watch:lib": "nx watch --includeDependentProjects --projects tag:component -- nx run \\$NX_PROJECT_NAME:build"
    },
    "workspaces": [
        ".github/actions/*",
        "components/*",
        "plugins/*",
        "tokens",
        ".storybook",
        "generator"
    ],
    "devDependencies": {
        "@adobe/spectrum-css-workflow-icons": "^1.2.1",
        "@commitlint/cli": "^18.1.0",
        "@commitlint/config-conventional": "^18.1.0",
        "@nx/eslint-plugin": "^17.0.1",
        "@nx/js": "^17.0.1",
        "@nx/storybook": "^17.0.1",
        "@nx/web": "^17.1.2",
        "@spectrum-css/expressvars": "^3.0.9",
        "@spectrum-css/vars": "^9.0.8",
        "colors": "^1.4.0",
        "conventional-changelog-spectrum": "^1.0.2",
        "diff": "^5.1.0",
        "diff2html": "^3.4.45",
        "eslint": "^8.52.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-jsonc": "^2.10.0",
        "eslint-plugin-prettier": "^5.0.1",
        "fast-glob": "^3.3.2",
        "gh-pages": "^6.0.0",
        "gulp": "^4.0.2",
        "gulp-replace": "^1.0.0",
        "gulplog": "^1.0.0",
        "husky": "^8.0.3",
        "lerna": "^7.4.1",
        "lint-staged": "^15.0.2",
        "lodash": "^4.17.21",
        "markdown-it": "^12.3.2",
        "npm-registry-fetch": "^16.1.0",
        "npm-run-all": "^4.1.5",
        "nunjucks": "^3.2.4",
        "nx": "^17.0.1",
        "prettier": "^3.0.3",
        "prettier-plugin-sh": "^0.13.1",
        "prismjs": "^1.23.0",
        "rimraf": "^5.0.5",
        "semver": "^7.5.1",
        "stylelint": "^15.11.0",
        "stylelint-config-clean-order": "^5.2.0",
        "stylelint-config-prettier": "^9.0.5",
        "stylelint-config-standard": "^34.0.0",
        "stylelint-header": "^1.0.0",
        "stylelint-high-performance-animation": "^1.9.0",
        "stylelint-selector-bem-pattern": "^3.0.1",
        "stylelint-use-logical": "^2.1.0",
        "tar": "^6.2.0",
        "through2": "^3.0.1",
        "wallace-cli": "^3.0.0",
        "yargs": "^17.7.2"
    },
    "engines": {
        "node": ">=18"
    },
    "browserslist": [
        "last 2 Edge versions",
        "last 2 Chrome versions",
        "last 2 Firefox versions",
        "last 2 Safari versions",
        "last 2 iOS versions"
    ],
    "lint-staged": {
        "*.css": [
            "prettier --write",
            "stylelint --fix --quiet"
        ],
        "*.md": [
            "prettier --write"
        ],
        "*.js,*.json": [
            "prettier --write",
            "eslint --fix --quiet"
        ],
        "tasks/*.sh": [
            "prettier --plugin prettier-plugin-sh --write"
        ]
    }
}
