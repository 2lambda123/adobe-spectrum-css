{
  "private": true,
  "name": "spectrum-css-monorepo",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "author": "Adobe",
  "contributors": [
    "Cassondra Roberts <castastrophe@users.noreply.github.com> (https://allons-y.llc)",
    "Garth Braithwaite <garthdb@gmail.com> (https://garthdb.com)",
    "Larry Davis <lazdnet@gmail.com>",
    "Patrick Fulton <pfulton@users.noreply.github.com>",
    "Rajdeep Chandra <Rajdeepc@users.noreply.github.com>",
    "Steve Gill <stevengill97@gmail.com>"
  ],
  "homepage": "https://opensource.adobe.com/spectrum-css/",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/spectrum-css.git"
  },
  "bugs": {
    "url": "https://github.com/adobe/spectrum-css/issues"
  },
  "scripts": {
    "build": "nx run site:build",
    "postbuild": "yarn mv:preview",
    "build:all": "echo \"\nThis command is being deprecated; please run \\033[33myarn build\\033[0m in future.\n\" && yarn build",
    "build:clean": "nx run-many --all --target clean,build --skip-nx-cache",
    "build:components": "nx run-many --projects @spectrum-css/* --target build",
    "postbuild:components": "node tasks/mod-extractor.js && prettier --cache --write components/*/metadata/*.md > /dev/null",
    "build:preview": "nx run storybook:build",
    "build:site": "nx run site:build",
    "cache:clear": "nx reset",
    "ci": "yarn build:all",
    "ci:storybook": "nx run storybook:storybook",
    "clean": "run-p clean:*",
    "clean:components": "rimraf components/*/dist",
    "clean:preview": "nx run storybook:clean",
    "clean:site": "nx run site:clean",
    "dev": "npm-run-all -s build:components -p dev:*",
    "dev:components": "yarn watch:components",
    "dev:site": "STORYBOOK_URL=\"http://localhost:3000\" nx run site:dev",
    "dev:storybook": "yarn storybook --no-open --port 3000",
    "lint": "run-p lint:*",
    "lint:packages": "node ./tasks/packageLint.js",
    "lint:styles": "stylelint \"components/**/*.css\" \"!components/*/dist/**\"",
    "mv:preview": "rimraf dist/preview && cp -r tools/preview/storybook-static dist/preview || exit 0",
    "new": "nx run @spectrum-css/generator:new",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "release": "nx affected --target build && lerna publish --no-private",
    "release:beta": "yarn release:from-package --preid beta --pre-dist-tag beta --conventional-prerelease",
    "release:from-package": "nx affected --target build && lerna publish from-package --no-private",
    "release:site": "yarn build:all && gh-pages -d dist/ -f -e .",
    "start": "run-p storybook watch:components",
    "storybook": "nx run storybook:start",
    "test": "nx run storybook:test",
    "test:scope": "nx run storybook:test:scope",
    "watch": "run-p watch:*",
    "watch:components": "nx watch --projects @spectrum-css/* --includeDependentProjects -- nx build --skip-nx-cache \\$NX_PROJECT_NAME",
    "watch:site": "nx run site:watch"
  },
  "workspaces": [
    "components/*",
    "tools/*",
    "plugins/*",
    "site"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "fast-glob": "^3.3.1",
    "gh-pages": "^6.0.0",
    "husky": "^8.0.3",
    "js-yaml": "^4.1.0",
    "latest-package": "^1.0.6",
    "lerna": "^6.6.2",
    "lint-staged": "^14.0.0",
    "npm-registry-fetch": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "nx": "^16.6.0",
    "prettier": "^2.8.8",
    "prettier-package-json": "^2.8.0",
    "rimraf": "^5.0.1",
    "semver": "^7.5.1",
    "stylelint": "^15.10.2",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-use-logical": "^2.1.0",
    "yargs": "^17.7.2"
  },
  "engines": {
    "node": ">=14.0.0 <18"
  },
  "browserslist": [
    "last 2 Edge versions",
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 iOS versions"
  ],
  "lint-staged": {
    "components/*/package.json": [
      "yarn lint:packages",
      "prettier-package-json --write"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}
