{
  "private": true,
  "name": "spectrum-css-monorepo",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "author": "Adobe",
  "contributors": [
    "Cassondra Roberts <castastrophe@users.noreply.github.com> (https://allons-y.llc)",
    "Garth Braithwaite <garthdb@gmail.com> (https://garthdb.com)",
    "Larry Davis <lazdnet@gmail.com>",
    "Patrick Fulton <pfulton@users.noreply.github.com>",
    "Rajdeep Singh",
    "Steve Gill <stevengill97@gmail.com>"
  ],
  "homepage": "https://opensource.adobe.com/spectrum-css/",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/spectrum-css.git"
  },
  "bugs": {
    "url": "https://github.com/adobe/spectrum-css/issues"
  },
  "scripts": {
    "build": "yarn build:components",
    "build:all": "nx run-many --all --target clean,build --parallel 10",
    "postbuild:all": "yarn mv:preview",
    "build:clean": "run-s clean build",
    "build:components": "nx run-many --target clean,build --projects tag:component --parallel 10",
    "build:preview": "nx build storybook",
    "build:site": "nx build @spectrum-css/documentation",
    "cache:clean": "nx reset",
    "ci": "NODE_ENV=development yarn build:all",
    "clean": "yarn cache:clean && run-p clean:*",
    "clean:components": "nx run-many --projects tag:component --target clean --parallel 10",
    "clean:docs": "nx run @spectrum-css/documentation:clean",
    "clean:preview": "nx run storybook:clean",
    "dev": "run-p dev:*",
    "dev:components": "run-s build:components watch:components",
    "dev:site": "NODE_ENV=development nx run @spectrum-css/documentation:dev",
    "lint": "node ./tasks/lint.mjs",
    "lint:styles": "stylelint",
    "mv:preview": "rimraf dist/preview && mv tools/preview/storybook-static dist/preview",
    "new": "nx run @spectrum-css/generator:new",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "prepare:site": "run-s clean:docs build:all",
    "prerelease": "yarn version:build",
    "release": "lerna publish --no-private",
    "release:beta-from-package": "yarn release from-package --conventional-prerelease --preid beta --pre-dist-tag beta --no-private",
    "prerelease:site": "yarn prepare:site",
    "release:site": "gh-pages -d dist/ -f -e .",
    "start": "NODE_ENV=development nx dev storybook",
    "storybook": "nx dev storybook",
    "test": "nx test storybook",
    "test:scope": "nx test:scope storybook",
    "version:build": "nx run-many --all --target clean,build --parallel 10",
    "watch": "run-p watch:*",
    "watch:components": "nx watch --projects tag:component -- nx run \\$NX_PROJECT_NAME:build",
    "watch:site": "nx run @spectrum-css/documentation:watch"
  },
  "workspaces": [
    "components/*",
    "tools/*",
    "plugins/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "autoprefixer": "^10.4.14",
    "fuzzy-matching": "^0.4.3",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.3",
    "lerna": "^6.6.2",
    "lint-staged": "^13.2.2",
    "lodash-es": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "nx": "^16.5.1",
    "postcss": "^8.4.24",
    "postcss-calc": "^9.0.1",
    "postcss-combine-duplicated-selectors": "^10.0.3",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-combininator": "^1.0.0-beta.1",
    "postcss-dir-pseudo-class": "^8.0.0",
    "postcss-discard-comments": "^6.0.0",
    "postcss-dropdupedvars": "^2.1.0",
    "postcss-droproot": "^1.0.3",
    "postcss-dropunusedvars": "^2.2.1",
    "postcss-focus-ring": "^1.0.0",
    "postcss-import": "^15.1.0",
    "postcss-inherit": "^4.1.0",
    "postcss-licensing": "^1.0.1",
    "postcss-logical": "^7.0.0",
    "postcss-merge-rules": "^6.0.1",
    "postcss-nested": "^6.0.1",
    "postcss-notnested": "file:./tools/postcss-notnested",
    "postcss-preset-env": "^9.0.0",
    "postcss-remapvars": "^1.1.0",
    "postcss-reporter": "^7.0.5",
    "postcss-sorting": "^8.0.2",
    "postcss-splitinator": "^1.0.0-beta.1",
    "postcss-transform-logical": "^1.1.0",
    "prettier": "^3.0.0",
    "prettier-package-json": "^2.8.0",
    "rimraf": "^5.0.1",
    "stylelint": "^15.9.0",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-use-logical": "^2.1.0",
    "svgo": "^3.0.2",
    "yargs": "^17.7.2"
  },
  "engines": {
    "node": ">=14 <18"
  },
  "browserslist": [
    "last 2 Edge versions",
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 iOS versions"
  ],
  "lint-staged": {
    "components/*/package.json": [
      "node ./tasks/lint.mjs",
      "prettier-package-json --write"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}
