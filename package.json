{
  "private": true,
  "name": "spectrum-css-monorepo",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "author": "Adobe",
  "contributors": [
    "Cassondra Roberts <castastrophe@users.noreply.github.com> (https://allons-y.llc)",
    "Garth Braithwaite <garthdb@gmail.com> (https://garthdb.com)",
    "Larry Davis <lazdnet@gmail.com>",
    "Patrick Fulton <pfulton@users.noreply.github.com>",
    "Steve Gill <stevengill97@gmail.com>"
  ],
  "homepage": "https://opensource.adobe.com/spectrum-css/",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/spectrum-css.git"
  },
  "bugs": {
    "url": "https://github.com/adobe/spectrum-css/issues"
  },
  "scripts": {
    "build": "yarn build:components",
    "build:all": "yarn build:site",
    "postbuild:all": "yarn mv:preview",
    "build:clean": "run-s clean build",
    "build:components": "nx run-many --projects \"@spectrum-css/*\" --exclude \"@spectrum-css/{*-builder*,preview,generator}\" --target build",
    "postbuild:components": "yarn docs:mod",
    "build:preview": "nx build @spectrum-css/preview",
    "build:site": "nx build site",
    "cache:clean": "nx reset",
    "ci": "yarn build:all",
    "ci:storybook": "nx run-many --projects @spectrum-css/preview --target build",
    "clean": "yarn cache:clean && nx run-many --projects \"@spectrum-css/*\" --target clean",
    "clean:components": "nx run-many --projects \"@spectrum-css/*\" --exclude \"@spectrum-css/{*-builder*,preview,generator}\" --target clean",
    "clean:preview": "nx clean @spectrum-css/preview",
    "clean:site": "rimraf dist",
    "precompare": "yarn build:components",
    "compare": "node ./tasks/compare-compiled-output.js",
    "dev": "NODE_ENV=development BROWSERSYNC_OPEN=true nx run site:start",
    "docs:mod": "node tasks/mod-extractor.js",
    "postdocs:mod": "prettier --cache --write components/*/metadata/*.md > /dev/null",
    "preinstall": "command -v nvm >/dev/null 2>&1 && nvm use || exit 0",
    "mv:preview": "test -d .storybook/storybook-static && rimraf dist/preview && mv .storybook/storybook-static dist/preview || exit 0",
    "new": "nx run @spectrum-css/generator:new",
    "precommit": "lint-staged",
    "prepare": "husky install && run-p refresh:*",
    "prepare:site": "run-s clean:site build:all",
    "refresh:directory": "test -n $BASH_VERSION && bash ./tasks/clean-up-after-migration.sh || exit 0",
    "refresh:env": "test -n $BASH_VERSION && bash ./tasks/copy-env-from-root.sh || exit 0",
    "prerelease": "nx affected --target build",
    "release": "lerna publish",
    "release:beta-from-package": "yarn release from-package --conventional-prerelease --preid beta --pre-dist-tag beta --no-private",
    "prerelease:site": "yarn build:site",
    "release:site": "gh-pages -d dist/ -f -e .",
    "prestart": "yarn build:components",
    "start": "NODE_ENV=development nx run @spectrum-css/preview:start",
    "test": "nx test @spectrum-css/preview",
    "test:scope": "nx test:scope @spectrum-css/preview",
    "version:build": "lerna run --since origin/main build"
  },
  "workspaces": [
    "components/*",
    "tools/*",
    "plugins/*",
    "tokens",
    "site",
    "generator",
    ".storybook",
    ".github/actions/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@nx/devkit": "^17.0.2",
    "@spectrum-css/expressvars": "^3.0.9",
    "@spectrum-css/vars": "^9.0.8",
    "colors": "^1.4.0",
    "conventional-changelog-spectrum": "^1.0.2",
    "diff": "^5.1.0",
    "diff2html": "^3.4.45",
    "fast-glob": "^3.3.2",
    "gh-pages": "^6.0.0",
    "husky": "^8.0.3",
    "lerna": "^6.6.2",
    "lint-staged": "^14.0.0",
    "npm-registry-fetch": "^16.1.0",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.4",
    "nx": "^17.0.3",
    "prettier": "^2.8.8",
    "prettier-package-json": "^2.8.0",
    "prismjs": "^1.23.0",
    "rimraf": "^5.0.5",
    "semver": "^7.5.1",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-use-logical": "^2.1.0",
    "tar": "^6.2.0",
    "through2": "^3.0.1",
    "yargs": "^17.7.2"
  },
  "engines": {
    "node": ">=18"
  },
  "browserslist": [
    "last 2 Edge versions",
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 iOS versions"
  ],
  "lint-staged": {
    "*.css": [
      "stylelint --fix --quiet"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}
