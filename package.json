{
  "private": true,
  "name": "spectrum-css-monorepo",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "author": "Adobe",
  "contributors": [
    "Cassondra Roberts <castastrophe@users.noreply.github.com> (https://allons-y.llc)",
    "Garth Braithwaite <garthdb@gmail.com> (https://garthdb.com)",
    "Larry Davis <lazdnet@gmail.com>",
    "Patrick Fulton <pfulton@users.noreply.github.com>",
    "Steve Gill <stevengill97@gmail.com>"
  ],
  "homepage": "https://opensource.adobe.com/spectrum-css/",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/spectrum-css.git"
  },
  "bugs": {
    "url": "https://github.com/adobe/spectrum-css/issues"
  },
  "scripts": {
    "build": "yarn build:components",
    "build:all": "run-s build:preview build:site",
    "postbuild:all": "yarn mv:preview",
    "build:clean": "nx run-many --projects tag:components --target clean,build --parallel 10",
    "build:components": "nx run-many --projects tag:components --target build --parallel 10",
    "postbuild:components": "yarn docs:mod",
    "build:preview": "nx build storybook",
    "build:site": "gulp buildSite -LLL",
    "cache:clean": "nx reset",
    "ci": "yarn build:all",
    "clean": "yarn cache:clean && run-p clean:*",
    "clean:components": "nx run-many --projects tag:components --target clean --parallel 10",
    "clean:docs": "rimraf dist",
    "clean:preview": "nx run storybook:clean",
    "dev": "NODE_ENV=development BROWSERSYNC_OPEN=true gulp dev",
    "dev:components": "run-s build:components watch:components",
    "docs:mod": "node tasks/mod-extractor.js",
    "postdocs:mod": "prettier --cache --write components/*/metadata/*.md > /dev/null",
    "lint:components": "node ./tasks/packageLint.js",
    "lint:styles": "stylelint",
    "mv:preview": "rimraf dist/preview && mv tools/preview/storybook-static dist/preview",
    "new": "nx run @spectrum-css/generator:new",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "prepare:site": "run-s clean:docs build:all",
    "prerelease": "yarn version:build",
    "release": "lerna publish",
    "release:beta-from-package": "yarn release from-package --conventional-prerelease --preid beta --pre-dist-tag beta --no-private",
    "prerelease:site": "yarn prepare:site",
    "release:site": "gh-pages -d dist/ -f -e .",
    "start": "NODE_ENV=development nx dev storybook",
    "storybook": "nx dev storybook",
    "test": "nx test storybook",
    "test:scope": "nx test:scope storybook",
    "version:build": "nx run-many --all --target clean,build --parallel 10",
    "watch": "run-p watch:*",
    "watch:components": "nx watch --projects tag:components -- nx run \\$NX_PROJECT_NAME:build"
  },
  "workspaces": [
    "components/*",
    "tools/*"
  ],
  "devDependencies": {
    "@adobe/focus-ring-polyfill": "^0.1.5",
    "@adobe/spectrum-css-workflow-icons": "^1.2.1",
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@csstools/postcss-global-data": "^1.0.3",
    "autoprefixer": "^6.5.3",
    "gh-pages": "^5.0.0",
    "gulp": "^4.0.0",
    "gulp-data": "^1.3.1",
    "gulp-pug": "^5.0.0",
    "gulp-replace": "^1.0.0",
    "husky": "^8.0.3",
    "lerna": "^6.6.2",
    "lint-staged": "^13.2.2",
    "loadicons": "^1.0.0",
    "lunr": "^2.3.6",
    "markdown-it": "^12.3.2",
    "npm-run-all": "^4.1.5",
    "nx": "^16.3.2",
    "postcss": "^8.4.24",
    "postcss-calc": "^9.0.1",
    "postcss-combine-duplicated-selectors": "^10.0.3",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-combininator": "^1.0.0",
    "postcss-dir-pseudo-class": "^7.0.2",
    "postcss-discard-comments": "^6.0.0",
    "postcss-discard-empty": "^6.0.0",
    "postcss-dropdupedvars": "^2.1.0",
    "postcss-droproot": "^1.0.3",
    "postcss-dropunusedvars": "^2.2.1",
    "postcss-focus-ring": "^1.0.0",
    "postcss-import": "^15.1.0",
    "postcss-inherit": "^4.1.0",
    "postcss-licensing": "^1.0.1",
    "postcss-load-config": "^4.0.1",
    "postcss-logical": "^6.2.0",
    "postcss-merge-rules": "^6.0.0",
    "postcss-nested": "^6.0.1",
    "postcss-remapvars": "^1.1.0",
    "postcss-reporter": "^7.0.5",
    "postcss-sorting": "^8.0.2",
    "postcss-splitinator": "^1.0.0-beta.1",
    "postcss-svg": "^3.0.0",
    "postcss-transform-logical": "^1.1.0",
    "postcss-values-parser": "^6.0.2",
    "prettier": "^2.8.8",
    "prettier-package-json": "^2.8.0",
    "prismjs": "^1.23.0",
    "rimraf": "^5.0.1",
    "semver": "^7.5.1",
    "stylelint": "^15.8.0",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-use-logical": "^2.1.0",
    "through2": "^3.0.1",
    "yargs": "^17.7.2"
  },
  "engines": {
    "node": ">=14.0.0 <18"
  },
  "browserslist": [
    "last 2 Edge versions",
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 iOS versions"
  ],
  "lint-staged": {
    "components/*/package.json": [
      "yarn lint:components",
      "prettier-package-json --write"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}
