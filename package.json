  "contributors": [
    "Cassondra Roberts <castastrophe@users.noreply.github.com> (https://allons-y.llc)",
    "Garth Braithwaite <garthdb@gmail.com> (https://garthdb.com)",
    "Larry Davis <lazdnet@gmail.com>",
    "Patrick Fulton <pfulton@users.noreply.github.com>",
    "Steve Gill <stevengill97@gmail.com>",
    "Rajdeep Chandra <rajrock38@gmail.com>"
  ],
  "homepage": "https://opensource.adobe.com/spectrum-css/",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/spectrum-css.git"
  },
  "bugs": {
    "url": "https://github.com/adobe/spectrum-css/issues"
  },
  "scripts": {
    "prepareSite": "node index.js prepareSite",
    "graduatePeerDeps": "node index.js graduatePeerDeps",
    "readmeLint": "node index.js readmeLint",
    "packageLint": "node index.js packageLint",
    "checkPeerDependencies": "node index.js checkPeerDependencies",
    "version": "node index.js version",
    "devAll": "node index.js dev",
    "devHeavy": "node index.js devHeavy",
    "watch-relaunch": "node index.js watch-relaunch",
    "buildDocs": "node index.js buildDocs",
    "releaseBundles": "node index.js releaseBundles",
    "prepareAll": "node index.js prepare",


    "dev:docs": "gulp dev && NODE_ENV=development BROWSERSYNC_OPEN=true yarn workspace @spectrum-css/documentation run build --serve",
    "build:docs": "yarn workspace @spectrum-css/documentation build",
    "build": "run-s build:site build:preview # preview cannot be built until the component assets are finished",
    "build:clean": "run-s clean build",
    "build:components": "lerna run --stream --scope \"@spectrum-css/*\" --ignore \"@spectrum-css/{*-builder*,preview,generator,site}\" build",
    "build:preview": "yarn workspace @spectrum-css/preview build",
    "postbuild:preview": "rimraf dist/preview && mv tools/preview/storybook-static dist/preview",
    "build:site": "gulp -LL",
    "ci-all": "yarn build",
    "clean": "gulp clean",
    "dev": "yarn dev:docs",
    "new": "yarn workspace @spectrum-css/generator new",
    "precommit": "lint-staged",
    "prepare": "husky install && gulp prepare",
    "prerelease": "yarn version:build",
    "release": "lerna publish",
    "release:beta-from-package": "yarn release from-package --conventional-prerelease --preid beta --pre-dist-tag beta --no-private",
    "release:bundles": "gulp releaseBundles",
    "release:site": "gulp prepareSite && gh-pages -d dist-site/ -f -e .",
    "start": "NODE_ENV=development yarn workspace @spectrum-css/preview start",
    "test": "VRT=true run-p dev \"test:run {1}\" --",
    "test:run": "yarn workspace @spectrum-css/test run test",
    "version:build": "SCOPES=($(lerna changed)) && IFS=, SCOPE=\"${SCOPES[*]}\" && [[ \"${#SCOPES[@]}\" -gt 1 ]] && SCOPE=\"{${SCOPE}}\"; lerna run --stream --scope \"${SCOPE}\" --ignore \"@spectrum-css/{*-builder*,preview,generator,site}\" build",
    "watch": "gulp watch"
  },
  "workspaces": [
    "components/*",
    "tools/*",
    "tests",
    "site"
  ],
  "devDependencies": {
    "@adobe/focus-ring-polyfill": "^0.1.5",
    "@commitlint/cli": "^8.3.3",
    "@commitlint/config-conventional": "^8.3.3",
    "del": "^5.1.0",
    "gh-pages": "^3.0.0",
    "glob": "^8.0.3",
    "gulp": "^4.0.0",
    "gulp-nunjucks-render": "^2.2.3",
    "gulp-replace": "^1.0.0",
    "gulplog": "^1.0.0",
    "husky": "^8.0.3",
    "lerna": "^4.0.0",
    "lint-staged": "^13.1.0",
    "loadicons": "^1.0.0",
    "lunr": "^2.3.6",
    "markdown-it": "^12.3.2",
    "markdown-it-anchor": "^8.6.5",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.3",
    "postcss": "^8.4.19",
    "postcss-calc": "^6.0.0",
    "postcss-cli": "^10.1.0",
    "postcss-dir-pseudo-class": "^5.0.0",
    "postcss-discard-empty": "^4.0.1",
    "postcss-dropdupedvars": "^1.1.2",
    "postcss-dropunusedvars": "^1.2.1",
    "postcss-focus-ring": "^1.0.0",
    "postcss-functions": "^3.0.0",
    "postcss-import": "^15.0.0",
    "postcss-inherit": "^4.0.3",
    "postcss-logical": "^4.0.2",
    "postcss-mixins": "^6.2.1",
    "postcss-nested": "^3.0.0",
    "postcss-remapvars": "^1.1.0",
    "postcss-selector-parser": "^6.0.2",
    "postcss-svg": "^3.0.0",
    "postcss-values-parser": "^3.1.1",
    "prettier": "^2.8.0",
    "prettier-package-json": "^2.8.0",
    "pretty-quick": "^3.1.3",
    "prismjs": "^1.23.0",
    "replace-in-file": "^6.3.5",
    "rimraf": "^4.1.1",
    "semver": "^6.3.0",
    "sort-stream": "^1.0.1",
    "splice-string": "^3.0.0",
    "stream-rename": "^1.0.1",
    "style-dictionary": "^3.7.1",
    "style-dictionary-sets": "^2.0.5",
    "svgmin": "^0.1.0",
    "through2": "^3.0.1",
    "util": "^0.12.5",
    "winston": "^3.8.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}
